        <div class="KotakOpsiLeaderboard">
            <div class="KotakModeTime">
                <h3>Time Mode</h3>
                <button class="tmblModeT active" data-timemode="5s">5 Seconds</button>
                <button class="tmblModeT" data-timemode="10s">10 Seconds</button>
                <button class="tmblModeT" data-timemode="15s">15 Seconds</button>
            </div>
            
            <div class="KotakModeGame">
                <h3>Game Mode</h3>
                <button class="tmblModeG active" data-clickmode="mouse">Mouse</button>
                <button class="tmblModeG" data-clickmode="keyboard">Keyboard</button>
            </div>
        </div>
        
        <div class="BoxLeaderBoard">
            <p>LeaderBoard</p>

            <div class="dislpayLeaderboard active" id="leaderboard-5s-mouse">
                <div class="tabelLeaderboard">
                    <div class="tabeljudulLeaderboard">
                        <span class="j_norank">Rank</span>
                        <span class="j_nameplayer">Player</span>
                        <span class="j_scoreplayer">Score</span>
                    </div>
                    
                    <% if (typeof scores5sMouse !== 'undefined' && scores5sMouse.length > 0) { %>
                        <% scores5sMouse.forEach((score, index) => { %>
                            <div class="tabelisiLeaderboard">
                                <span class="i_norank"><%= index + 1 %></span>
                                <span class="i_nameplayer"><%= score.namaUser %></span>
                                <span class="i_scoreplayer"><%= score.score %></span>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="infoLeaderboard">Belum Ada Player Yang Memainkannya</div>
                    <% } %>
                </div>
            </div>

