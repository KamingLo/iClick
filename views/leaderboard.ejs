<%- include('partials/header.ejs') %>

<h1>Leaderboard</h1>

<h2>5 Seconds Mode</h2>
<table>
    <thead>
        <tr>
            <th>Rank</th>
            <th>Player</th>
            <th>Highest Score</th>
        </tr>
    </thead>
    <tbody>
        <% if (typeof scores5s !== 'undefined' && scores5s.length > 0) { %>
            <% scores5s.forEach((score, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= score.namaUser %></td>
                    <td><%= score.score %></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="3">No scores available for 5s mode</td>
            </tr>
        <% } %>
    </tbody>
</table>

